<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blog</title>
    <link href="~/css/styles.css" rel="stylesheet" type="text/css" />
    <link href='https://fonts.googleapis.com/css?family=Ropa+Sans' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro' rel='stylesheet' type='text/css'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="/img/blogger.png" />
</head>
<body>
    <div class="header">
        <div class="header-left-panel">
            <a asp-controller="Login" asp-action="Index">
                <div class="logo-wrap">
                    <div class="logo">
                        <h2>your slogan</h2>
                        <h1>WebsiteName</h1>
                    </div>
                </div>
            </a>
        </div>
        <div class="header-right-panel">
            <div class="header-right-panel-top">
                <p>Call Us : @ViewBag.about.Phone</p>
                <p> <a href="#">Mail Us : @ViewBag.about.Mail</a></p>
            </div>
            <div class="menu">
                <ul>
                    <li class="marRight10"><a asp-controller="About" asp-action="Home">home</a></li>
                    <li class="marRight10"><a asp-controller="Writing" asp-action="Home">blogs</a></li>
                    <li><a asp-controller="Contact" asp-action="Home">contact</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="page-wrap">
        <div class="page-wrapper">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        <p>Created by Hamza Kılıç and Zeyd Sakız.</p>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
