<button type="button" class="btn btn-outline-warning mt-2" data-bs-toggle="modal" data-bs-target="#exampleModal">Add Admin</button>

<div class="modal" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Add Admin</h1>
            </div>
            <form asp-controller="Home" asp-action="AddAdmin" method="post">
                <div class="modal-body">
                    <div class="col mb-2">
                        <text>Admin Name</text>
                        <input type="text" class="form-control" name="AdminName" required />
                    </div>
                    <div class="col mb-2">
                        <text>Admin Password</text>
                        <input type="password" class="form-control" name="AdminPassword" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>