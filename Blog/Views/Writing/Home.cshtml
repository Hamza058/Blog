@using EntityLayer.Concrete
@model List<Writing>

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--- panel wrap div end -->
<div class="primary-content marRight30">
    <div class="mid-panel">
        <div class="panel">
            <div class="title">
                <h1>Blog</h1>
                <h2>Lorem ipsum dolor sit amet consectetur adipiscing elit </h2>
            </div>
            @foreach (var item in Model)
            {
                <div class="content marginTop">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-4">
                                <img src="~/img/f.jpg" width="100%" height="100%" class="marRight30" />
                            </div>
                            <div class="col-8">
                                <div class="row-fluid-cols-2">
                                    <div class="row">
                                        <div class="col-9">
                                            <h2>@item.Heading</h2>
                                        </div>
                                        <div class="col-2">
                                            @item.CreatedDate.ToString("dd/MM/yyyyy")
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <p>@item.Content</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>