<button type="button" class="btn btn-outline-warning mt-2" data-bs-toggle="modal" data-bs-target="#exampleModal">Add Writing</button>

<div class="modal" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Add Writing</h1>
            </div>
            <form asp-controller="Writing" asp-action="AddWriting" method="post" enctype="multipart/form-data" asp-antiforgery="true">
                <div class="modal-body">
                    <div class="col mb-2">
                        <text>Heading</text>
                        <input type="text" class="form-control" name="Heading" required />
                    </div>
                    <div class="col mb-2">
                        <text>Content</text>
                        <textarea class="form-control" name="Content" required></textarea>
                    </div>
                    <div class="col mb-2">
                        <input type="file" class="form-control" name="file" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>