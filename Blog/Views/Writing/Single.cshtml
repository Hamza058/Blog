@using EntityLayer.Concrete
@model Writing

@{
    ViewData["Title"] = "Single";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-9">
            <h1 style="color:#FFF8DC;">@Model.Heading</h1>
        </div>
        <div class="col-3 text-end p-0 pt-1">
            <p class="single" style="color:#B8860B;">@Model.CreatedDate.ToString("dd/MM/yyyy")</p>
        </div>
    </div>
    <div class="row">
        @if (Model.Image != null)
        {
            <div class="col-12">
                <img src="~/img/@Model.Image" style="width:100% !important; height:100%" />
            </div>
        }
        <div class="col-12 pt-3">
            <p class="fs-2">@Model.Content</p>
        </div>
    </div>
</div>

