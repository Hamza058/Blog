@using EntityLayer.Concrete
@model Writing

@{
    ViewData["Title"] = "Single";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-9">
            <h1 style="color:#FFF8DC;">@Model.Heading</h1>
        </div>
        <div class="col-3 text-end pt-2">
            <p class="fs-1 fw-semibold" style="color:#B8860B;">@Model.CreatedDate.ToString("dd/MM/yyyy")</p>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <img src="~/img/@Model.Image" width="100%" height="100%" />
        </div>
        <div class="col-12 pt-3">
            <p class="fs-2">@Model.Content</p>
        </div>
    </div>
</div>

